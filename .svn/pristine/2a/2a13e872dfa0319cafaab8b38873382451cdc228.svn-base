    List<PARAMETER_TYPE> BiologicalPs = ViewData["BiologicalP"] as List<PARAMETER_TYPE>;
    List<PARAMETER_TYPE> MicrobiolPs = ViewData["MicrobiolP"] as List<PARAMETER_TYPE>;
