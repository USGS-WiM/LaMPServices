body 
{
    /*background-image: url("../Images/bg-texture1.jpg");*/
    background-color:#F3F3F3;
    font-size: .80em;
    /*font-family: "Trebuchet MS", Verdana, Helvetica, Sans-Serif;*/
    font-family: 'BryantRegular';
    margin: 0px;
    padding: 0px;
    color: #464646;
}

a  
{
	text-decoration: none;
}


a img {
	border: none;
	vertical-align: middle;
}

a:link, a:visited
{
    color: #F37A49;
}

a:hover {
    text-decoration: underline;
	cursor:pointer;
}

a:active {
    color: #59595C;
}

p, ul {
    margin-bottom: 20px;
    line-height: 1.6em;
}


/* HEADINGS   
----------------------------------------------------------*/
h1, h2, h3, h4, h5, h6 
{
    font-size: 1.5em;
    color: #59595C;
    text-transform: none;
    font-weight: 200;
    margin-bottom: 10px;
}

h1
{
    font-size: 1.6em;
    padding-bottom: 0px;
    margin-bottom: 0px;
}

h2
{
    font-size: 1.5em;
    font-weight: 600;
}

h3
{
    font-size: 1.2em;
}

h4
{
    font-size: 1.1em;
}

h5, h6
{
    font-size: 1em;
}


/* PRIMARY LAYOUT ELEMENTS   
----------------------------------------------------------*/

/* you can specify a greater or lesser percentage for the 
page width. Or, you can specify an exact pixel width. */
.page {
    width: 1024px;
    margin: 20px auto 0px auto;
}

#header {
    position: relative;
    margin: 0px;
    padding: 0px;
    background: #59595C;
    width: 100%;
}

#header h1 {
    font-family: 'BryantBold';
    margin: 0px;
    padding: 0px 0px 0px 20px;
    color: #E7E4CE;
    border: none;
    line-height: 2em;
    font-size: 32px !important;
    
}

#main {
    padding: 12px;
    min-height: 420px;
    background-color: White;
