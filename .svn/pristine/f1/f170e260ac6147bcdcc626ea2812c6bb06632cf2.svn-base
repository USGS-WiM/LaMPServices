 <script type="text/javascript">
     function Post4Grid() {
        var SiteName = $("#SiteName").val();
        var SiteLat = $("#SiteLat").val();
        var SiteLong = $("#SiteLong").val();
        var SiteDesc = $("#SiteDesc").val();
        var Lakedropdown = $("#Lakedropdown").val();
