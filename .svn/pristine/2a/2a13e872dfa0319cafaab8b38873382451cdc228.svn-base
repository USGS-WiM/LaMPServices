                <div data-role="fieldcontain">
                    <div class="ui-block-a">@Html.Label(ProjectStrings.SiteRes_Lbl)</div>
                    <div class="ui-block-b">
                        <select id="resourcesDD" class="lampSelectInput" name="resources">
